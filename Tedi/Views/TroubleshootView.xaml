<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tedi.Views.TroubleshootView"
             BackgroundColor="#001f3f">

    <VerticalStackLayout Padding="40" Spacing="30"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">

        <Label Text="Troubleshoot"
               TextColor="White"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Button Text="Reset this PC"
                BackgroundColor="#0078D7"
                TextColor="White"
                FontSize="18"
                WidthRequest="300"
                HeightRequest="60"
                Clicked="OnResetClicked"/>

        <Button Text="Advanced options"
                BackgroundColor="#0078D7"
                TextColor="White"
                FontSize="18"
                WidthRequest="300"
                HeightRequest="60"
                Clicked="OnAdvancedClicked"/>
    </VerticalStackLayout>
</ContentView>
